{% extends 'base.html.twig' %}

{% block title %}
Edit article
{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <br>
                <h1>Article edit</h1>

                {{ form_start(edit_form, {'attr': { 'class' : 'form-horizontal' }}) }}
                <div class="form-group">
                    {{ form_widget(edit_form.title, {'attr': { 'class' : 'form-control' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.text, {'attr': { 'class' : 'form-control' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.slug, {'attr': { 'class' : 'form-control' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.createdAt, {'attr': { 'class' : 'form-control' }}) }}
                </div>
                <input class="btn btn-success" type="submit" value="Edit" />
                {{ form_end(edit_form) }}

                <ul>
                    <li>
                        <a href="{{ path('article_index') }}">Back to the list</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
