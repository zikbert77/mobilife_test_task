{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>User</h1>

                            <table>
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Username</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Password</th>
                                    <td>{{ user.password }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Plainpassword</th>
                                    <td>{{ user.plainPassword }}</td>
                                </tr>
                                </tbody>
                            </table>

                                    <a class="btn btn-secondary" href="{{ path('admin_user_index') }}">Back to the list</a>

                                    <a class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': user.id }) }}">Edit</a>
                            <br>
                            <br>
                                    {{ form_start(delete_form) }}
                                        <input class="btn btn-danger" type="submit" value="Delete">
                                    {{ form_end(delete_form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
